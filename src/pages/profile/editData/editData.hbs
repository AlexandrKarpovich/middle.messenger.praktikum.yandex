<main class="profile">
    <aside class="profile__sidebar">
        <button class="profile__back-button" type="button">←</button>
    </aside>
    <div class="profile__main">
        <div class="avatar">
            <div class="avatar__inner">
                <img
                    class="avatar__img"
                    src="./public/avatar-icon.svg"
                    alt="Аватар-name"
                />
                <span class="avatar__change">Поменять аватар</span>
            </div>
            <div class="avatar__username">Иван</div>
        </div>
        <form class="profile__form">
            <div class="info">
                <label class="info__item">
                    Почта
                    <input type="email" name="email" value="pochta@yandex.ru" class="info__input" required />
                </label>
                <label class="info__item">
                    Логин
                    <input type="text" name="login" value="ivanivanov" class="info__input" required />
                </label>
                <label class="info__item">
                    Имя
                    <input type="text" name="first_name" value="Иван" class="info__input" required />
                </label>
                <label class="info__item">
                    Фамилия
                    <input type="text" name="second_name" value="Иванов" class="info__input" required />
                </label>
                <label class="info__item">
                    Имя в чате
                    <input type="text" name="display_name" value="Иван" class="info__input" required />
                </label>
                <label class="info__item">
                    Телефон
                    <input type="tel" name="phone" value="+7 (909) 967 30 30" class="info__input" required />
                </label>
            </div>

            {{> Button label="Сохранить" class="primary" type="button" }}
        </form>
    </div>
</main>
