<main class="profile">
    {{> Popup
            title="Загрузите файл"
            isLink=true
            linkHref="#"
            linkLabel="Выбрать файл на компьютере"
            btnType="button"
            btnClass="primary"
            btnLabel="Поменять"
    }}
    <aside class="profile__sidebar">
        <button class="profile__back-button" type="button">←</button>
    </aside>

    <!-- Форма для изменения аватара -->
    <div class="profile__main">
        <div class="avatar">
            <div class="avatar__inner">
                <img
                        class="avatar__img"
                        src="./public/avatar-icon.svg"
                        alt="Аватар-name"
                />
                <span class="avatar__change">Поменять аватар</span>
            </div>
            <div class="avatar__username">Иван</div>
        </div>

        <form class="profile__form">
            <div class="info">
                <label class="info__item">
                    Почта
                    <input type="email" name="email" value="pochta@yandex.ru" class="info__input" required />
                </label>
                <label class="info__item">
                    Логин
                    <input type="text" name="login" value="ivanivanov" class="info__input" required />
                </label>
                <label class="info__item">
                    Имя
                    <input type="text" name="firstName" value="Иван" class="info__input" required />
                </label>
                <label class="info__item">
                    Фамилия
                    <input type="text" name="secondName" value="Иванов" class="info__input" required />
                </label>
                <label class="info__item">
                    Имя в чате
                    <input type="text" name="chatName" value="Иван" class="info__input" required />
                </label>
                <label class="info__item">
                    Телефон
                    <input type="tel" name="phone" value="+7 (909) 967 30 30" class="info__input" required />
                </label>
            </div>

            <ul class="actions">
                <li class="actions__item">
                    {{> Button label="Изменить данные" class="link" type="button" }}
                </li>
                <li class="actions__item">
                    {{> Button label="Изменить пароль" class="link" type="button" }}
                </li>
                <li class="actions__item">
                    {{> Button label="Выйти" class="link--danger" type="button" }}
                </li>
            </ul>
        </form>
    </div>

</main>
